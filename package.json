{
  "name": "nsp-cli",
  "version": "0.0.1",
  "description": "Neosperience NSP Command Line Interface to handle app scaffolding, testing and monitoring",
  "main": "index.js",
  "bin": {
    "nsp": "./bin/nsp.js"
  },
  "scripts": {
    "build": "yarn clean && tsc && chmod +x dist/cli.js",
    "clean": "rm -rf ./lib ./docs",
    "clean:all": "rm -rf ./lib ./docs ./package-lock.json ./node_modules",
    "docs": "typedoc --out docs ./src",
    "global": "npm i -g && nsp",
    "prepare": "yarn build",
    "check-types": "tsc --noEmit",
    "check-formatting": "prettier --check '**/*.{js,json,css,md,scss,tsx,ts}'",
    "commit": "commit",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "fix": "gts fix",
    "lint": "gts lint",
    "nsp": "ts-node src/cli.ts",
    "test": "jest",
    "tscov": "tscov --min-coverage 90 --details"
  },
  "keywords": [
    "cli",
    "nsp",
    "shell",
    "command",
    "line"
  ],
  "author": "Luca Bianchi (luca.bianchi@neosperience.com)",
  "license": "MIT",
  "devDependencies": {
    "@liftr/tscov": "^2.0.0",
    "@types/figlet": "^1.5.0",
    "@types/fs-extra": "^9.0.10",
    "@types/inquirer": "^7.3.1",
    "@types/node": "^14.14.37",
    "gts": "^3.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tscov": "^1.3.3",
    "typedoc": "^0.20.35",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "figlet": "^1.5.0",
    "fs-extra": "^9.1.0",
    "husky": "^6.0.0",
    "inquirer": "^8.0.0",
    "inversify": "^5.0.5",
    "kleur": "^4.1.4",
    "lint-staged": "^10.5.4",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md,scss,tsx,ts}": [
      "prettier --write",
      "git add"
    ]
  }
}
